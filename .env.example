# Database Configuration
POSTGRES_DB=instantpay
POSTGRES_USER=instantpay_user
POSTGRES_PASSWORD=change-me

# Spring DataSource Configuration (JDBC)
SPRING_DATASOURCE_URL=jdbc:postgresql://db:5432/instantpay
SPRING_DATASOURCE_USERNAME=instantpay_user
SPRING_DATASOURCE_PASSWORD=change-me

# Kafka Configuration
SPRING_KAFKA_BOOTSTRAP_SERVERS=kafka:9092

# JWT Configuration
JWT_SECRET=replace-me-with-a-secure-secret-key
JWT_EXPIRATION_MILLIS=3600000

# PII Encryption Key
PII_ENCRYPTION_KEY=replace-me-with-a-secure-32-byte-hex-key

# Spring Profile
SPRING_PROFILES_ACTIVE=docker